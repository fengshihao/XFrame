<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.MediaSelectActivity">

    <fragment
        android:id="@+id/media_list"
        android:name="com.fengshihao.album.ui.AlbumFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout="@layout/fragment_album_item_list" />



    <fragment
        android:id="@+id/media_selected"
        android:name="com.fengshihao.album.ui.AlbumSelectedFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout="@layout/fragment_album_selected" />

</android.support.constraint.ConstraintLayout>